// https://www.typescriptlang.org/tsconfig
{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES2020",
    "rootDirs": [
      "./src"
    ],

    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictNullChecks": true,
    // "noImplicitReturns": true,
    // "noUnusedLocals": false,
    // "allowSyntheticDefaultImports": true,
    // "esModuleInterop": true,
    // "forceConsistentCasingInFileNames": true,
    // "strict": true,
    // "noImplicitAny": true,
    // "strictPropertyInitialization": false,
    // "skipLibCheck": true,
    // "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@InterfacesB": [
        "src/backend/interfaces.ts",
      ],
      // "@Logs": [
      //   "src/backend/src/server/logs/index.ts",
      // ]
    }
  },
  "exclude": [
    "./node_modules/**/*.js",
    "*.config.js",
    "**/dist",
    "*eslintrc.*"
  ],
  "include": [
    "src/**/*",
    "src/backend/src/server/**/*"
  ]
}
